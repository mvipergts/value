datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Appraisal {
  id                    Int      @id @default(autoincrement())
  vin                   String
  vehicle               String?
  valuation             Json?
  history               Json?
  maintenance           Json?
  commonIssues          Json?
  notes                 String?
  reconItems            Json?
  carfaxUrl             String?
  carfaxSummary         Json?
  hiddenMaintenanceCost Float?
  additionalCosts       Json?
  createdAt             DateTime @default(now())
}
